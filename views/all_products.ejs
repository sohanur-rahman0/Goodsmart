<%- include('_layouts/header') %>

    <!-- autocomplete-searchbar  -->

    <section>
        
        <div class="searchbox white z-depth-1">
            <form action="/search" method="post">
            <div style="width: 94%; display: inline-block;" class="input-field">
                <input type="text" name="searchbox" id="searchbar" class="autocomplete">
                <label for="searchbar">Search<i style="margin-right: 0"
                        class="material-icons left">search</i></label>
            </div>
            <button type="submit" class="btn search-btn"><i class="material-icons">search</i></button>
        </form>
        </div>
    
    </section>

    <!-- carousel -->

    <section>
        <div class="slider">
            <ul class="slides">
                <li>
                    <img src="/images/banner.png" alt="this is a banner image describing goodsmart"> <!-- random image -->
                </li>
                <li>
                    <img src="/images/14.jpg" alt="this is a banner image describing goodsmart"> <!-- random image -->
                    <div class="caption center-align">
                        <h3>We sell computers!</h3>
                        <h5 class="light grey-text text-lighten-3">At best market prices.</h5>
                    </div>
                </li>

                <li>
                    <img src="/images/5.jpg" alt="this is a banner image describing goodsmart"> <!-- random image -->
                    <div class="caption right-align">
                        <h3>We sell hardware</h3>
                        <h5 class="light grey-text text-lighten-3">At very low price.</h5>
                    </div>
                </li>

            </ul>
        </div>
    </section>
    <!-- header content -->



    <!-- products -->
    <section>

        <div class="row">
            <!-- <div class="col s12 m12 l12">
                <h4 class="center">Products</h4>
            </div> -->
            <% products.forEach((p)=> { %>
            <div class="col s6 m3 l2">
                <a href="/products/<%= p.category %>/<%= p.slug %>">
                    <div class="card">
                        <div class="card-image">
                            <img
                                src="/product_images/<%= p.id %>/<%= p.image %>" alt="this is a product image">
                        </div>
                        <div class="card-content">
                            <h6 class="grey-text text-darken-4"><%= p.title %></h6>
                            <p class="orange-text text-darken-5">Price: à§³<%= parseFloat(p.price).toFixed(2) %>/-</p>
                        </div>
                    </div>
                </a>
            </div>
            <% }) %> 
        </div>
    </section>
