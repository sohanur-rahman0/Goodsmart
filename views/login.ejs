<%- include('_layouts/header') %>
    <section class="container">
        <form action="/users/login" method="POST" class="white z-depth-2 login_form">
            <h4 class="center grey-text">Login</h4>
            <div class="input-field">
                <label for="username">Username</label>
                <input type="text" name="username" value="">
            </div>
            <div class="input-field">
                <label for="password">Password</label>
                <input type="password" name="password" value="">
            </div>
            <div class="center input-field">
                <input type="submit" name="submit" value="Login" style="width: 100%; margin-top: 15px;"
                    class="btn brand z-depth-0">
            </div>
            <p style="display: inline-block">Don't have an account?</p>
            <a href="/users/register">Signup</a>
        </form>
    </section>


    <%- include('_layouts/footer') %>